
@{
    ViewBag.Title = "Login";
}
<style>
    .userinfo-form{
        border-radius:7px;
        border: 1px solid #000;
        padding: 20px;
    }

    .shadowed {
        box-shadow: gray 10px 10px 10px;
    }

    .center {
        display: flex;
        justify-content: center;
    }

    .form-container{
        margin-top:20%;
    }

    #remember {
        margin-right: 5px;
        margin-left: 20px;
    }

    .baseline{
        display:flex;
        align-items:baseline;
    }
</style>
<div class="center">
    <div class="form-container">
        <form class="shadowed userinfo-form">
            <fieldset>
                <legend>Login</legend>
                <div class="form-group">
                    <label for="login">Username</label>
                    <input type="text" id="login" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" />
                </div>
                <div class="form-group baseline">
                    <a class="btn btn-info" id="submit">Log in</a>
                    <input type="checkbox" id="remember" />
                    <span>Remember me</span>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<script>
    require(["jquery", "toastr"], function ($, toastr) {
        var submitUrl = '@Url.Action("CheckLogin", "Account")';
        var homeUrl = '@Url.Action("Index", "Home")';

        function initializeEventHandlers() {
            $('#submit').on("click", function () {
                let username = $("#login").val();
                let password = $("#password").val();
                $.ajax({
                    method:"POST",
                    url: submitUrl,
                    data: {
                        Username: username,
                        Password: password
                    },
                    success: function (e) {
                        if (e.success) {
                            console.log("success");
                            window.location = homeUrl;
                        }
                        else {
                            console.log("error");
                            toastr.error("Incorrect username or password","Authorization failed");
                        }
                        
                    },
                    catch: function (error) {
                        debugger;
                        console.log("error");
                        console.log(error);
                        toastr.success("Item added to cart");
                        toastr.error("Could not authorize");
                    }
                });
            });
        }

        function init(){
            initializeEventHandlers();
        };
        init();
    })
</script>

