<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Site.css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.20/require.min.js" data-main="@Url.Content("~/Scripts/bootstrap.js")"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Products
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Action("Products", "Products", new { category = "wear" })'>Wear</a></li>
                            <li><a href="@Url.Action("Products", "Products", new { category = "boots" })">Boots</a></li>
                            <li><a href="@Url.Action("Products", "Products", new { category = "food" })">Food</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="min-height:90%">
        @RenderBody()
        <hr />
    </div>
    <div class="container-fluid footer">
        <div class="col-sm-4">
            <div><h3 style="color:yellow;">About</h3></div>
            <ul class="footer-info-list">
                <li><a>Company today</a></li>
                <li><a>Rules</a></li>
                <li><a>News</a></li>
                <li><a>Contacts</a></li>
            </ul>
        </div>
        <div class="col-sm-4">
            <div><h3 style="color:yellow;">Contact us</h3></div>
            <ul class="footer-info-list">
                <li><a>Shops</a></li>
                <li><a>Contacts</a></li>
                <li><a>Our Distributors</a></li>
                <li><a>Our Partners</a></li>
            </ul>
        </div>
        <div class="col-sm-4">
            <div><h3 class="footer-column-heading" style="color:yellow;">Services</h3></div>
            <ul class="footer-info-list">
                <li><a>Your profile</a></li>
                <li><a>Help</a></li>
                <li><a>NeDiscountss</a></li>
                <li><a>Shipment</a></li>
            </ul>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
</body>
</html>
